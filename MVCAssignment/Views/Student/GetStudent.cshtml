@using MVCAssignment.ViewModel
@model StudentRecordViewModel
@{
    ViewBag.Title = "StudentView";
}
<a href="/Employee/AddNew">Add New Student</a>
<h2>Student View</h2>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetStudent</title>
</head>
<body>
    <div>
        <table border="1">
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Student Age</th>
            </tr>
            @foreach (StudentViewmodel item in Model.MyStudent)
            {
                <tr>
                    <td>@item.StudentId</td>
                    <td>@item.StudentName</td>
                    @*
                    <td style="background-color:@item.SalaryColor">
                        @item.Salary
                    </td>
                        *@
                </tr>
            }
        </table>
    </div>
</body>
</html>
